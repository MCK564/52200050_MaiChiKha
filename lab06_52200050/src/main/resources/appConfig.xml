<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- First Bean with property tag -->
    <bean id="firstBean" class="com.java.Product">
        <property name="id" value="1"/>
        <property name="name" value="First Product"/>
        <property name="price" value="10.0"/>
        <property name="description" value="First Product Description"/>
    </bean>

    <!-- Second Bean with constructor-arg tags -->
    <bean id="secondBean" class="com.java.Product">
        <constructor-arg name="id" value="2"/>
        <constructor-arg name="name" value="Second Product"/>
        <constructor-arg name="price" value="20.0"/>
        <constructor-arg name="description" value="Second Product Description"/>
    </bean>

    <!-- Third Bean, singleton, can use property or constructor-arg -->
    <bean id="thirdBean" class="com.java.Product" scope="singleton">
        <constructor-arg name="id" value="3"/>
        <constructor-arg name="name" value="Third Product"/>
        <constructor-arg name="price" value="30.0"/>
        <constructor-arg name="description" value="Third Product Description"/>
    </bean>

</beans>
